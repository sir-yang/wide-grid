Page {
    background: #f9f9f9;
}
.points-banner {
    position: relative;
    width: 630rpx;
    height: 254rpx;
    margin: 30rpx 30rpx 0;
    padding-left: 60rpx;
    padding-top: 50rpx;
    z-index: 1;
}
.points-banner-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 690rpx;
    height: 304rpx;
    z-index: -1;
}

.points-banner .points-num {
    font-size: 58rpx;
    color: #fff;
    font-weight: bold;
}

.points-banner .member-box {
    margin-top: 50rpx;
}
.member-box .member_icon {
    display: block;
    width: 28rpx;
    height: 23rpx;
    margin-right: 6rpx;
}
.member-box > view {
    font-size: 20rpx;
    color: #E9FFF9;
}
.points-record {
    position: absolute;
    right: 30rpx;
    bottom: 30rpx;
}
.points-record > image {
    display: block;
    width: 10rpx;
    height: 19rpx;
    margin-left: 8rpx;
}

.title-box {
    padding: 0 30rpx;
    height: 88rpx;
    font-size: 32rpx;
    color: #000;
    font-weight: bold;
    border-bottom: 1px solid #e9e9e9;
}
.title-box > image {
    display: block;
    width: 25rpx;
    height: 13rpx;
}

.desc-box {
    padding: 10rpx 30rpx 50rpx;
    font-size: 28rpx;
    color: #666;
    line-height: 48rpx;
}

.points_2_content {
    margin-top: 20rpx;
    padding-bottom: 50rpx;
    background: #fff;
}
.unlock-points-btn > view {
    width: 670rpx;
    height: 72rpx;
    margin: 0 auto 37rpx;
    line-height: 72rpx;
    text-align: center;
    font-size: 32rpx;
    color: #F9F9F9;
    -webkit-border-radius: 36rpx;
    -moz-border-radius: 36rpx;
    -o-border-radius: 36rpx;
    border-radius: 36rpx;
    background:-webkit-linear-gradient(-4deg,rgba(61,208,166,0.94),rgba(25,215,160,0.94));
    background:-moz-linear-gradient(-4deg,rgba(61,208,166,0.94),rgba(25,215,160,0.94));
    background:-o-linear-gradient(-4deg,rgba(61,208,166,0.94),rgba(25,215,160,0.94));
    background:linear-gradient(-4deg,rgba(61,208,166,0.94),rgba(25,215,160,0.94));
    -webkit-box-shadow: 0px 2px 4px 0px rgba(25,215,160, .3);
    -moz-box-shadow: 0px 2px 4px 0px rgba(25,215,160, .3);
    -o-box-shadow: 0px 2px 4px 0px rgba(25,215,160, .3);
    box-shadow: 0px 2px 4px 0px rgba(25,215,160, .3);
}
.my-banner-box {
    position: relative;
    width: 100%;
    height: 320rpx;
    background: linear-gradient(110deg, rgba(61, 208, 166, 0.94), rgba(59, 177, 143, 0.94));
}

.my_banner_bg {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 123rpx;
}

.user-box {
    margin-bottom: 30rpx;
}

.user-box > image {
    display: block;
    width: 100rpx;
    height: 100rpx;
    margin-top: 55rpx;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    -o-border-radius: 50%;
    border-radius: 50%;
    border: 1rpx solid #d6dedc;
    -webkit-box-shadow: 0 0 8px 1px rgba(17, 159, 118, 0.54);
    -moz-box-shadow: 0 0 8px 1px rgba(17, 159, 118, 0.54);
    -o-box-shadow: 0 0 8px 1px rgba(17, 159, 118, 0.54);
    box-shadow: 0 0 8px 1px rgba(17, 159, 118, 0.54);
}

.member-box {
    margin-left: 25rpx;
}

.integral-box > image, .member-box > image {
    display: block;
    width: 32rpx;
    height: 26rpx;
    margin-right: 5rpx;
}

.integral-box > view, .member-box > view {
    font-size: 20rpx;
    color: #e9fff9;
}

.user-desc {
    padding: 30rpx;
    font-size: 32rpx;
    color: #333;
    line-height: 52rpx;
}
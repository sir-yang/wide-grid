Page {
    background: #f9f9f9;
}

.my-banner-box {
    position: relative;
    width: 100%;
    height: 320rpx;
    background: linear-gradient(110deg, rgba(61, 208, 166, 0.94), rgba(59, 177, 143, 0.94));
}

.my_banner_bg {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 123rpx;
}

.user-box {
    margin-bottom: 30rpx;
}

.user-box > image {
    display: block;
    width: 100rpx;
    height: 100rpx;
    margin-top: 55rpx;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    -o-border-radius: 50%;
    border-radius: 50%;
    border: 1rpx solid #d6dedc;
    -webkit-box-shadow: 0 0 8px 1px rgba(17, 159, 118, 0.54);
    -moz-box-shadow: 0 0 8px 1px rgba(17, 159, 118, 0.54);
    -o-box-shadow: 0 0 8px 1px rgba(17, 159, 118, 0.54);
    box-shadow: 0 0 8px 1px rgba(17, 159, 118, 0.54);
}

.edit-box {
    position: absolute;
    top: 135rpx;
    right: 20rpx;
    z-index: 1;
}

.edit-box > image {
    display: block;
    width: 32rpx;
    height: 32rpx;
    margin-right: 5rpx;
}

.member-box {
    margin-left: 25rpx;
}

.integral-box > image, .member-box > image {
    display: block;
    width: 32rpx;
    height: 26rpx;
    margin-right: 5rpx;
}

.integral-box > view, .member-box > view {
    font-size: 20rpx;
    color: #e9fff9;
}

.content_1_box {
    padding: 30rpx;
    background: #fff;
}
.rank-integral-box {
    position: relative;
    width: 690rpx;
    line-height: 88rpx;
    box-shadow: 0 0 4px 0px rgba(61, 206, 165, .15);
}
.rank-integral-box::after {
    display: block;
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 1px;
    height: 45rpx;
    margin-top: -23rpx;
    background: #e9e9e9;
}

.rank-integral-box > view {
    text-align: center;
    font-size: 24rpx;
    color: #3BB18F;
}

.tab-box {
    margin: 30rpx 0;
}
.tab-box > view {
    flex: 1;
    text-align: center;
}
.tab-box > view > image {
    display: block;
    width: 48rpx;
    height: 48rpx;
    margin: 20rpx auto 10rpx;
}
.tab-box > view > view {
    font-size: 24rpx;
    color: #333;
}

.content_2_box {
    margin-top: 20rpx;
    padding: 0 30rpx 30rpx;
    background: #fff;
}
.content_2_box > view {
    line-height: 88rpx;
    font-size: 28rpx;
    color: #333;
    border-bottom: 1px solid #e9e9e9;
}
.content_2_box > view:last-child {
    border-bottom: none;
}
.content_2_box > view > image {
    display: block;
    width: 13rpx;
    height: 25rpx;
}
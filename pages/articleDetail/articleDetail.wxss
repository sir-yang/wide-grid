Page {
    background: #f9f9f9;
}

.article_title {
    padding: 35rpx 0 30rpx;
    font-size: 32rpx;
    color: #333;
}

.operate-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    height: 66rpx;
    -webkit-border-radius: 33rpx;
    -moz-border-radius: 33rpx;
    -o-border-radius: 33rpx;
    border-radius: 33rpx;
    background: -webkit-linear-gradient(#ff795a, #ff0d0d);
    background: -o-linear-gradient(#ff795a, #ff0d0d);
    background: -moz-linear-gradient(#ff795a, #ff0d0d);
    background: linear-gradient(#ff795a, #ff0d0d);
    -webkit-box-shadow: 0px 2px 8px 1px rgba(255, 13, 13, .3);
    -moz-box-shadow: 0px 2px 8px 1px rgba(255, 13, 13, .3);
    -o-box-shadow: 0px 2px 8px 1px rgba(255, 13, 13, .3);
    box-shadow: 0px 2px 8px 1px rgba(255, 13, 13, .3);
}
.article-btn-groud .operate-btn:nth-child(2) {
    margin: 0 10rpx;
    background: -webkit-linear-gradient(rgba(187, 210, 252, .94),rgba(90, 187, 255, .94));
    background: -o-linear-gradient(rgba(187, 210, 252, .94),rgba(90, 187, 255, .94));
    background: -moz-linear-gradient(rgba(187, 210, 252, .94),rgba(90, 187, 255, .94));
    background: linear-gradient( rgba(187, 210, 252, .94),rgba(90, 187, 255, .94));
    -webkit-box-shadow: 0px 2px 8px 1px rgba(90, 187, 255, .3);
    -moz-box-shadow: 0px 2px 8px 1px rgba(90, 187, 255, .3);
    -o-box-shadow: 0px 2px 8px 1px rgba(90, 187, 255, .3);
    box-shadow: 0px 2px 8px 1px rgba(90, 187, 255, .3);
}
.article-btn-groud .operate-btn:nth-child(3),
.two-btn-obx .operate-btn:nth-child(2) {
    background: -webkit-linear-gradient(rgba(192, 213, 250, .94),rgba(94, 139, 255, .94));
    background: -o-linear-gradient(rgba(192, 213, 250, .94),rgba(94, 139, 255, .94));
    background: -moz-linear-gradient(rgba(192, 213, 250, .94),rgba(94, 139, 255, .94));
    background: linear-gradient( rgba(192, 213, 250, .94),rgba(94, 139, 255, .94));
    -webkit-box-shadow: 0px 2px 8px 1px rgba(94, 139, 255, .3);
    -moz-box-shadow: 0px 2px 8px 1px rgba(94, 139, 255, .3);
    -o-box-shadow: 0px 2px 8px 1px rgba(94, 139, 255, .3);
    box-shadow: 0px 2px 8px 1px rgba(94, 139, 255, .3);
}
.two-btn-obx {
    padding: 0 15rpx;
}
.two-btn-obx .operate-btn {
    margin: 0 15rpx;
}

/* 推荐文章 */
.recommend-box {
    padding: 0 30rpx;
    background: #fff;
}
.recommend-box .item-box {
    padding: 25rpx 0;
    border-bottom: 1px solid #e9e9e9;
}
.recommend-box .item-box > image {
    display: block;
    width: 198rpx;
    height: 150rpx;
    margin-left: 30rpx;
}

/* 评论 */
.commen-box {
    padding: 30rpx 30rpx 0;
    background: #fff;
}
.commen-box .common-item {
    padding: 35rpx 0;
    border-bottom: 1px solid #e9e9e9;
}
.commen-box .common-item:last-child {
    border-bottom: none;
}
.commen-box .common-item > image {
    display: block;
    width: 130rpx;
    height: 130rpx;
    margin-right: 30rpx;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    -o-border-radius: 50%;
    border-radius: 50%;
}

/* 底部样式 */
.footer-spacing {
    height: 108rpx;
}
.detail-footer-box {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 98rpx;
    padding: 0 30rpx;
    background: #fff;
    border-top: 1px solid #e9e9e9;
}
.detail-footer-box .left-icon {
    display: block;
    width: 13rpx;
    height: 25rpx;
}

.detail-footer-box > input {
    display: block;
    width: 300rpx;
    height: 72rpx;
    margin: 0 50rpx 0 36rpx;
    line-height: 72rpx;
    font-size: 28rpx;
    color: #333;
    background: #F2F2F2;
    -webkit-border-radius: 36rpx;
    -moz-border-radius: 36rpx;
    -o-border-radius: 36rpx;
    border-radius: 36rpx;
    border: none;
    text-align: center;
}

.common-box {
    position: relative;
    width: 48rpx;
    height: 48rpx;
}
.common-box > image {
    width: 100%;
    height: 100%;
}
.common-box > view {
    position: absolute;
    top: 0;
    right: -10rpx;
    background: #F25555;
    line-height: 24rpx;
    padding: 0 5rpx;
    -webkit-border-radius: 12rpx;
    -moz-border-radius: 12rpx;
    -o-border-radius: 12rpx;
    border-radius: 12rpx;
    font-size: 20rpx;
    color: #fff;
}

.footer-right > image {
    display: block;
    width: 48rpx;
    height: 48rpx;
    margin-left: 30rpx;
}


.reward-modal-content {
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 500;
    width: 610rpx;
    padding: 60rpx 25rpx;
    transform: translate(-50%, -50%);
    background: #fff;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
    -o-border-radius: 10rpx;
    border-radius: 10rpx;
}
.reward-box {
    margin-top: 45rpx;
    margin-bottom: 60rpx;
    padding: 30rpx;
    border-top: 1px solid #e9e9e9;
    border-bottom: 1px solid #e9e9e9;
}
.reward-modal-content .reward-money {
    display: inline-block;
    vertical-align: middle;
    width: 110rpx;
    height: 46rpx;
    padding-left: 10rpx;
    margin: 0 20rpx;
    line-height: 46rpx;
    background: #E0E0E0;
    border: none;
    -webkit-box-shadow:2px -1px 6px 0px rgba(224,224,224,0.67);
    -moz-box-shadow:2px -1px 6px 0px rgba(224,224,224,0.67);
    -o-box-shadow:2px -1px 6px 0px rgba(224,224,224,0.67);
    box-shadow:2px -1px 6px 0px rgba(224,224,224,0.67);
    -webkit-border-radius:6rpx;
    -moz-border-radius:6rpx;
    -o-border-radius:6rpx;
    border-radius:6rpx;
    font-size: 32rpx;
    color: #333;
}

.reward-modal-content .cacal-btn {
    padding: 0 10rpx;
    line-height: 50rpx;
    font-size: 32rpx;
    color: #999;
}
.reward-modal-content .pay-btn {
    width: 200rpx;
    margin-left: 30rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 32rpx;
    color: #F25555;
}

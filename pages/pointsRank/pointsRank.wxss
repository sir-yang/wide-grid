.points-bg-image {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.points-top-box {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    height: 242rpx;
    background: rgba(124, 130, 129, 0.37);
    border-bottom: 1px solid rgba(124, 130, 129, 0.37);
}

.points-tab-box {
    height: 100rpx;
    border-bottom: 1px solid #fff;
}

.tab-item {
    position: relative;
    width: 25%;
    text-align: center;
    line-height: 100rpx;
    font-size: 28rpx;
    color: #fff;
}

.points-tab-box .on::after {
    display: block;
    content: '';
    position: absolute;
    left: 50%;
    bottom: 0;
    width: 77rpx;
    height: 6rpx;
    margin-left: -38rpx;
    -webkit-border-radius: 2rpx;
    -moz-border-radius: 2rpx;
    -o-border-radius: 2rpx;
    border-radius: 2rpx;
    background: #3bb18f;
}

.my-rank-box {
    height: 140rpx;
    padding: 0 35rpx 0 30rpx;
}

.points-share {
    display: block;
    width: 140rpx;
    height: 58rpx;
    -webkit-border-radius: 29rpx;
    -moz-border-radius: 29rpx;
    -o-border-radius: 29rpx;
    border-radius: 29rpx;
    font-size: 32rpx;
    color: #3bb18f;
    text-align: center;
    line-height: 58rpx;
    background: #fff;
    box-shadow: 0 1px 3px 1px rgba(75, 225, 182, 0.24);
}

.points-rank-list {
    position: relative;
}
.points-rank-list::before {
    display: block;
    content: '';
    width: 100%;
    height: 242rpx;
}
.points-rank-item {
    position: relative;
    padding: 30rpx 30rpx 30rpx 100rpx;
}

.points-rank-icon {
    position: absolute;
    top: 60rpx;
    left: 25rpx;
}

.rank-icon {
    display: block;
    width: 53rpx;
    height: 65rpx;
}
.points-rank-icon .text {
    position: absolute;
    top: 5rpx;
    left: 50%;
    transform: translateX(-50%);
    font-size: 32rpx;
    color: #fff;
}

.points-rank-lf {
    position: absolute;
    top: 50%;
    left: 10rpx;
    width: 80rpx;
    height: 80rpx;
    transform: translateY(-50%);
}
.points-rank-lf .text {
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
}

.points-rank-item .user-head {
    display: block;
    width: 100rpx;
    height: 100rpx;
    margin-right: 30rpx;
    border: 1px solid #aaa;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    -o-border-radius: 50%;
    border-radius: 50%;
}
.points-rank-item .crown-icon {
    display: block;
    width: 28rpx;
    height: 21rpx;
    margin-right: 10rpx;
}
.points-rank-item .point-num {
    font-size: 24rpx;
    color: #E0E0E0;
}
.points-rank-item .use-time {
    position: absolute;
    top: 50%;
    left: 375rpx;
    transform: translateY(-50%);
    margin-left: 60rpx;
    font-size: 20rpx;
    color: #CECECE;
}

.points-rank-item .right-icon {
    display: block;
    width: 14rpx;
    height: 26rpx;
    margin-left: 30rpx;
}

.color {
    color: #3BB18F!important;
}
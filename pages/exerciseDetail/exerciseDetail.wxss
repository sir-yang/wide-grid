Page {
    background: #f9f9f9;
}

.audio-video-box {
    position: relative;
    width: 100%;
    height: 460rpx;
    background: #fff;
}

.audio-video-box .cover-img {
    width: 100%;
    height: 100%;
}

.audio-modal-box {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 182rpx;
    background: rgba(0, 0, 0, .5);
}
.audio-modal-box .text {
    padding: 15rpx 30rpx;
    font-size: 32rpx;
    color: #fff;
    line-height: 48rpx;
    border-bottom: 1px solid rgba(233,233,233, .4);
}
.audio-modal-box .time {
    font-size: 24rpx;
    color: #fff;
    opacity: 50;
}

.audio-modal-box progress {
    margin: 0 15rpx;
}

.tit-down-box {
    padding: 30rpx 30rpx 50rpx;
    background: #fff;
    line-height: 48rpx;
}
.down-load-box {
    width: 30rpx;
    height: 30rpx;
    padding: 9rpx;
    margin-left: 45rpx;
}
.down-load-box .down-load {
    display: block;
    width: 30rpx;
    height: 30rpx;
    margin: auto;
}


.audio-icon-box {
    padding: 30rpx 0;
    text-align: center;
    background: #fff;
}
.audio-icon-box image {
    width: 110rpx;
    height: 110rpx;
}



.wxParse-box {
    margin-top: 35rpx;
    padding: 30rpx 30rpx 60rpx;
    background: #fff;
}


.footer-spacing {
    height: 108rpx;
}
.footer-box {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 98rpx;
    background: #fff;
    border-top: 1px solid #e9e9e9;
}
.footer-box .receive-btn {
    width: 616rpx;
    height: 72rpx;
    line-height: 72rpx;
    margin: auto;
    margin-top: 13rpx;
    -webkit-border-radius: 36rpx;
    -moz-border-radius: 36rpx;
    -o-border-radius: 36rpx;
    border-radius: 36rpx;
    background: #19d7a0;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    -webkit-box-shadow: 0px 0px 10px 1px rgba(25, 215, 160, .3);
    -moz--box-shadow: 0px 0px 10px 1px rgba(25, 215, 160, .3);
    -o--box-shadow: 0px 0px 10px 1px rgba(25, 215, 160, .3);
    box-shadow: 0px 0px 10px 1px rgba(25, 215, 160, .3);
}

.footer-box .receive-btn.not {
    background: rgba(25, 215, 160, .5);
    -webkit-box-shadow: 0px 0px 10px 1px rgba(25, 215, 160, .1);
    -moz--box-shadow: 0px 0px 10px 1px rgba(25, 215, 160, .1);
    -o--box-shadow: 0px 0px 10px 1px rgba(25, 215, 160, .1);
    box-shadow: 0px 0px 10px 1px rgba(25, 215, 160, .1);
}
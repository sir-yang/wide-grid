.tab-box {
    position: relative;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: #fff;
    font-size: 28rpx;
    color: #333;
}
.tab-box::before {
    display: block;
    content: '';
    position: absolute;
    top: 50%;
    left: 33.33%;
    width: 1px;
    height: 50rpx;
    margin-top: -25rpx;
    background: #E9E9E9;
}
.tab-box::after {
    display: block;
    content: '';
    position: absolute;
    top: 50%;
    right: 33.33%;
    width: 1px;
    height: 50rpx;
    margin-top: -25rpx;
    background: #E9E9E9;
}
.tab-box > view {
    position: relative;
}
.tab-box .on::after {
    display: block;
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 60rpx;
    height: 4rpx;
    margin-left: -30rpx;
    -webkit-border-radius: 2rpx;
    -moz-border-radius: 2rpx;
    -o-border-radius: 2rpx;
    border-radius: 2rpx;
    background: #3BB18F;
}


